<% title ("Prometheus 2.0 - Maintainer &laquo;") + @maintainer.name + ("&raquo; - Repocop") -%>
<% url "/packager/" + @maintainer.login + "/repocop" -%>

<div class="header"><%= ("Maintainer:") %> <%= @maintainer.name %></div>

<p class="break" />
<span class="vkladka">&nbsp;<a href="/<%= params[:locale] %>/packager/<%= @maintainer.login %>" class="news" title="<%= ("information about maintainer") %>"><%= ("Information") %></a>&nbsp;</span><span class="underl">&nbsp;</span><span class="vkladka">&nbsp;<a href="/<%= params[:locale] %>/packager/<%= @maintainer.login %>/srpms" class="news" title="<%= ("packages which was built by this maintainer") %>"><%= ("Packages") %></a>&nbsp;</span><span class="underl">&nbsp;</span><span class="vkladka">&nbsp;<a href="/<%= params[:locale] %>/packager/<%= @maintainer.login %>/gear" class="news" title="<%= ("gear") %>"><%= ("Gear") %></a>&nbsp;</span><span class="underl">&nbsp;</span><span class="vkladka">&nbsp;<a href="/<%= params[:locale] %>/packager/<%= @maintainer.login %>/bugs" class="news" title="<%= ("Bugs/FR statistics assigned to this maintainer") %>"><%= ("Bugs and FR") %></a>&nbsp;</span><span class="current">&nbsp;<b><%= ("Repocop") %></b>&nbsp;</span><p class="break" />
<b><%= ("Repocop messages:") %></b><br /><br />

<table id="bugs" cellspacing="0" cellpadding="3" class="sortable">
  <tr>
    <th class="sort"><%= ("package") %></th>
    <th id="repocop" class="sort"><%= ("status") %></th>
    <th class="sort"><%= ("test") %></th>
    <th class="nosort"><%= ("message") %></th>
  </tr>

<% @maintainer.sisyphus.each do |acl| -%>
  <% if !acl.srpm.nil? -%>
    <% acl.srpm.repocops.each do |repocop| -%>
      <% if repocop.status != 'skip' and repocop.status != 'ok' -%>
        <tr>
          <td class="strange">
            <%= link_to repocop.name + '-' + repocop.version + '-' + repocop.release + '.' + repocop.arch, '/' + params[:locale] + '/srpm/Sisyphus/' + acl.srpm.name, :class => 'news', :title => 'detailed information about RPM' %>
          </td>
          <td><%= image_tag(repocop.status + '.png', :size => "20x20") %><br /><%= repocop.status %></td>
          <td><%= repocop.testname %></td>
          <td style="text-align:left"><%= repocop.message %></td>
        </tr>
      <% end -%>
    <% end -%>
  <% end -%>
<% end -%>

</table>
