<body>
<div id="top">
  <div id="top-logo">
    <a href="http://www.altlinux.org/"><img src="/images/altlinux.gif" style="border:0" alt="ALT Linux Team - wiki" title="ALT Linux Team - wiki" /></a>
  </div>
  <div id="top-menu">
    <%= _("Sisyphus repository ") %>
  </div>
  <div id="top-auth">
    <div id="div1" style="display:block;margin-top:20px;">
      <form action="/find.shtml" method="get">
        <table>
          <tr>
            <td>
              <input class="top-name" type="text" name="request" value="" size="18" />
            </td>
            <td valign="middle">
              <input type="submit" class="top-go" id="sub1" value="<%= _("find") %>" onmouseover="m_on('sub1')" onmouseout="m_off('sub1')" />
            </td>
          </tr>
        </table>
      </form>
    </div>
  </div>
</div>

<div id="top-line">
  <div id="vinfo">
    <b><%= _("Last update:") %></b> <%= Date.today %> | <b><%= _("SRPMs:") %> <%= Srpm.count_srpms_in_sisyphus %></b>
  </div>

  <div style="text-align: right"><%= link_to_unless_current _('en'), '/en' + yield(:url), :title => _('English') %> <%= link_to_unless_current _('ru'), '/ru' + yield(:url), :title => _('Russian') %> <%= link_to_unless_current _('uk'), '/uk' + yield(:url), :title => _('Ukrainian') %> <%= link_to_unless_current 'br', '/br' + yield(:url), :title => _('Portuguese (Brasilian)') %></div>

</div>

<div id="menu" style="text-align:center">
  <ul>
    <li onmouseover="m_on('li1')" onmouseout="m_off('li1')" id="li1">
      <div id="dli1">
        <%= link_to_unless_current _("Home"), '/' + params[:locale], :title => _("site home page") %>
      </div>
    </li>
    <li onmouseover="m_on('li2')" onmouseout="m_off('li2')" id="li2">
      <div id="dli2">
        <%= link_to_unless_current _("News"), '/' + params[:locale] + '/news', :title => _("site news") %>
      </div>
    </li>
    <li onmouseover="m_on('li3')" onmouseout="m_off('li3')" id="li3">
      <div id="dli3">
        <%= link_to_unless_current _("Packages"), '/' + params[:locale] + '/packages', :title => _("packages information") %>
      </div>
    </li>
    <li onmouseover="m_on('li4')" onmouseout="m_off('li4')" id="li4">
      <div id="dli4">
        <%= link_to_unless_current _("Maintainers"), '/' + params[:locale] + '/people', :title => _("maintainers information") %>
      </div>
    </li>
    <li onmouseover="m_on('li5')" onmouseout="m_off('li5')" id="li5">
      <div id="dli5">
        <%= link_to_unless_current _("Security"), '/' + params[:locale] + '/security', :title => _("security fixes") %>
      </div>
    </li>
    <li onmouseover="m_on('li6')" onmouseout="m_off('li6')" id="li6">
      <div id="dli6">
        <%= link_to_unless_current _("About"), '/' + params[:locale] + '/project', :title => _("about Prometeus project") %>
      </div>
    </li>
    <li onmouseover="m_on('li7')" onmouseout="m_off('li7')" id="li7">
      <div id="dli7">
        <%= link_to_unless_current _("RSS"), '/' + params[:locale] + '/rss', :title => _("RSS") %>
      </div>
    </li>
    <li onmouseover="m_on('li8')" onmouseout="m_off('li8')" id="li8">
      <div id="dli8">
        <%= link_to _("Wiki"), _("http://en.altlinux.org/Sisyphus"), :title => _("sisyphus public site") %>
      </div>
    </li>
<% if params[:locale] == 'ru' -%>
    <li onmouseover="m_on('li9')" onmouseout="m_off('li9')" id="li9">
      <div id="dli9">
        <%= link_to _("Blog"), _("http://www.livejournal.com/userinfo.bml?user=ru_sisyphus"), :title => _("blog") %>
      </div>
    </li>
    <li onmouseover="m_on('li10')" onmouseout="m_off('li10')" id="li10">
      <div id="dli10">
        <%= link_to _("Planet"), _("http://planet.altlinux.org/"), :title => _("ALT Linux Planet") %>
      </div>
    </li>
<% end -%>
    <li onmouseover="m_on('li11')" onmouseout="m_off('li11')" id="li11">
      <div id="dli11">
        <%= link_to _("Mailing list"), _("http://lists.altlinux.org/mailman/listinfo/community-en/"), :title => _("community-en@") %>
      </div>
    </li>
  </ul>
</div>
