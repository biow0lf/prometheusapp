<body>
<div id="top">
  <div id="top-logo">
    <a href="http://www.altlinux.org/"><img src="/images/altlinux.gif" style="border:0" alt="ALT Linux Team - wiki" title="ALT Linux Team - wiki" /></a>
  </div>
  <div id="top-menu">
    <%= t('top_header') %>
  </div>
  <div id="top-auth">
    <div id="div1" style="display:block;margin-top:20px;">
      <form action="/find.shtml" method="get">
        <table>
          <tr>
            <td>
              <input class="top-name" type="text" name="request" value="" size="18" />
            </td>
            <td valign="middle">
              <input type="submit" class="top-go" id="sub1" value="<%= t('find') %>" onmouseover="m_on('sub1')" onmouseout="m_off('sub1')" />
            </td>
          </tr>
        </table>
      </form>
    </div>
  </div>
</div>

<div id="top-line">
  <div id="vinfo">
    <b><%= t('last_update') %></b> <%= Date.today %> | <b><%= t('srpms') %> <!--<#%= Srpm.count_srpms_in_sisyphus %>--></b>
  </div>

  <div style="text-align: right"><%= link_to_unless_current 'en', '/en' + yield(:url), :title => t('app.english') %> <%= link_to_unless_current 'ru', '/ru' + yield(:url), :title => t('app.russian') %> <%= link_to_unless_current 'uk', '/uk' + yield(:url), :title => t('app.ukrainian') %> <%= link_to_unless_current 'br', '/br' + yield(:url), :title => t('app.portuguese') %></div>

</div>

<div id="menu" style="text-align:center">
  <ul>
    <li onmouseover="m_on('li1')" onmouseout="m_off('li1')" id="li1">
      <div id="dli1">
        <%= link_to_unless_current t('home'), root_url, :title => t('home_title') %>
      </div>
    </li>
    <li onmouseover="m_on('li2')" onmouseout="m_off('li2')" id="li2">
      <div id="dli2">
        <%= link_to_unless_current t('news'), page_path("news"), :title => t('news_title') %>
      </div>
    </li>
    <li onmouseover="m_on('li3')" onmouseout="m_off('li3')" id="li3">
      <div id="dli3">
        <%= link_to_unless_current t('packages'), '/packages', :title => t('packages_title') %>
      </div>
    </li>
    <li onmouseover="m_on('li4')" onmouseout="m_off('li4')" id="li4">
      <div id="dli4">
        <%= link_to_unless_current t('maintainers'), '/people', :title => t('maintainers_title') %>
      </div>
    </li>
    <li onmouseover="m_on('li5')" onmouseout="m_off('li5')" id="li5">
      <div id="dli5">
        <%= link_to_unless_current t('security'), page_path("security"), :title => t('security_title') %>
      </div>
    </li>
    <li onmouseover="m_on('li6')" onmouseout="m_off('li6')" id="li6">
      <div id="dli6">
        <%= link_to_unless_current t('about'), page_path("project"), :title => t('about_title') %>
      </div>
    </li>
    <li onmouseover="m_on('li7')" onmouseout="m_off('li7')" id="li7">
      <div id="dli7">
        <%= link_to_unless_current t('rss'), page_path("rss"), :title => t('rss_title') %>
      </div>
    </li>
    <li onmouseover="m_on('li8')" onmouseout="m_off('li8')" id="li8">
      <div id="dli8">
        <%= link_to t('wiki'), t('wiki_url'), :title => t('wiki_title') %>
      </div>
    </li>
<% if params[:locale] == 'ru' -%>
    <li onmouseover="m_on('li9')" onmouseout="m_off('li9')" id="li9">
      <div id="dli9">
        <%= link_to t('blog'), t('blog_url'), :title => t('blog_title') %>
      </div>
    </li>
    <li onmouseover="m_on('li10')" onmouseout="m_off('li10')" id="li10">
      <div id="dli10">
        <%= link_to t('planet'), t('planet_url'), :title => t('planet_title') %>
      </div>
    </li>
<% end -%>
    <li onmouseover="m_on('li11')" onmouseout="m_off('li11')" id="li11">
      <div id="dli11">
        <%= link_to t('mailing_list'), t('mailing_list_url'), :title => t('mailing_list_title') %>
